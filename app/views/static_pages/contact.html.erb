<% provide(:title, 'Contact') %>
<h1>Contact Us</h1>
<h2>Questions? Suggestions? Feel free to leave a comment!</h2>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
   <%= form_for(:static_pages,url: about_path, :html =>{:class => 'form-horizontal'}) do |f| %>
     <fieldset>
     <div class = "center form-group">
         <%= f.label :name, :class => "col-sm-2 control-label" %>
         <div class = "col-sm-10">
           <%= f.text_field :name , :class => "form-control" %>
         </div>
       </div>
       
     <div class = "center form-group">
         <%= f.label :email, :class => "col-sm-2 control-label" %>
         <div class = "col-sm-10">
           <%= f.text_field :email , :class => "form-control" %>
         </div>
       </div>
    
     <div class = "center form-group">
        <%= f.label :comments, :class => "col-sm2 control-label", :style => "float:left" %>
        <div class = "col-sm-10">
         <%= text_area_tag 'comment', nil,rows: 10, cols: 65,:style => "float:right", class: 'comment_input'%>
        </div>
     </div> 

    <div class = "center form-actions">
      <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
    </div>
   </fieldset>
  <%end%>
</div>
</div>
